{
    # 全局配置版本
    "version": "2.4.3",

    # 共享群组与机器人（所有账号默认共用）
    "groups": {
        # 需要触发 /ydx 的目标会话
        "monitor": [
            "me"
        ],
        # 监听开奖消息来源群
        "zq_group": [
            "me"
        ],
        # 管理员会话（接收仪表盘/命令）
        "admin_chat": 0,
        # 朱雀开奖机器人 ID
        "zq_bot": 0
    },

    # 朱雀接口公共参数（账号私有 cookie/x_csrf 在 users/*/config.json）
    "zhuque": {
        "api_url": "https://zhuque.in/api/user/getInfo?"
    },

    # 重点通知渠道（公开仓库请保持空值）
    "notification": {
        "iyuu": {
            "enable": false,
            "url": "",
            "token": "",
            "notify_types": [
                "explode",
                "profit",
                "explode_summary"
            ]
        },
        "tg_bot": {
            "enable": false,
            "bot_token": "",
            "chat_id": ""
        }
    },

    # 全局代理（默认不启用）
    "proxy": {
        "enabled": false,
        "type": "socks5",
        "host": "127.0.0.1",
        "port": 7890,
        "username": "",
        "password": ""
    },

    # 全局 AI 配置（模型/API Key/降级链）
    "ai": {
        "enabled": true,
        "api_keys": [
            "sk-your-api-key"
        ],
        "base_url": "https://apis.iflow.cn/v1",
        "timeout": 30,
        "max_retries": 3,
        "models": {
            "1": {
                "model_id": "your-model-1",
                "enabled": true
            },
            "2": {
                "model_id": "your-model-2",
                "enabled": true
            }
        },
        # 模型降级顺序（按序号）
        "fallback_chain": [
            "1",
            "2"
        ]
    },

    # 运行日志策略
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/multiuser.log",
        "max_size": "10MB",
        "backup_count": 5
    },

    # 定时任务（秒）
    "schedule": {
        "state_save_interval": 300,
        "balance_check_interval": 60,
        "health_check_interval": 30
    },

    # 发布更新鉴权（私有仓库建议填写；也可改用环境变量 YDXBOT_GITHUB_TOKEN）
    "update": {
        "github_token": ""
    }
}
